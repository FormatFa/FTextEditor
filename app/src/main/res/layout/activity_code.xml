<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawlayout"
    tools:context=".CodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"/>
        <view.formatfa.ftexteditor.view.ScriptView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/script"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="left"
        android:id = "@+id/menu1"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/navprogress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="#ff0000"
            android:background="#ffffff"
            android:id="@+id/navtip"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:text="字符导航栏"
            android:layout_height="wrap_content" />
        <ListView

            android:layout_below="@id/navtip"
            android:id="@+id/nav"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            /></RelativeLayout>


    <RelativeLayout
        android:layout_gravity="right"
        android:id = "@+id/menu2"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/navprogress2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="#ff0000"
            android:background="#ffffff"
            android:id="@+id/navtip2"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:text="其他导航栏"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_below="@id/navtip2"
            android:id="@+id/nav2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            /></RelativeLayout>


</android.support.v4.widget.DrawerLayout>